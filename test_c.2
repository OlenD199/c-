#include<stdio.h>

void test1()
{
	//定义int a=3,b=5;交换两个数据，不适用第三个量
	int a = 3;
	int b = 5;
	printf("交换前 a=%d b=%d", a, b);
	{
		//方法一：（不能处理较大的数据）
		a = a + b;
		b = a - b;
		a = a - b;
		printf("交换后 a=%d b=%d\n", a, b);
	}
	a = 3;
	b = 5;
	printf("交换前 a=%d b=%d", a, b);
	{
		//方法二：使用按位异或
		b = a ^ b;
		a = a ^ b;
		b = a ^ b;
		printf("交换后 a=%d b=%d\n", a, b);
	}

}

void test2()
{
	//寻找单身狗：从一组数组中找出出现次数唯一的元素
	int arr[] = { 1,2,4,6,3,2,5,4,1,3,6 };
	int sz = sizeof(arr) / sizeof(arr[0]);
	int i = 0;
	//方法一：（暴力求解）
	for (i = 0; i < sz; i++)
	{
		int count = 0;
		for (int j = 0; j < sz; j++)
		{
			if (arr[i] == arr[j])
			{
				count++;
			}
		}
		if (count == 1)
		{
			printf("单身狗：%d\n", arr[i]);
		}
	}
	//方法二：（使用按位异或）
	// a^a=0;a^0=a;
	//3^5^3 = 5 = 3^3^5    异或满足结合律
	//所以将数组所有元素异或可得到单个数
	int ret = 0;
	for (i = 0; i < sz; i++)
	{
		 ret = ret ^ arr[i];
	}
	printf("单身狗：%d\n", ret);

}

int main()
{
	test1();
	test2();

	return 0;
}
