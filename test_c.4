#include<stdio.h>

//定义函数：
int Max(int x, int y)
{
	if (x > y)
	{
		return x;
	}
	else
	{
		return y;
	}
}

//以宏的方式定义
#define MAX(X,Y) (X>Y?X:Y)

int main()
{
	int a = 10;
	int b = 20;
	//求最大值
	//以函数的方式：
	int max = Max(a, b);
	printf("最大值是：%d\n", max);
	//以宏的方式：
	max = MAX(a, b);
	printf("最大值是：%d\n", max);

	return 0;
}






