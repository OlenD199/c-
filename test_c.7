#include <stdio.h>

void test_1()
{
	//计算n的阶乘
	int i = 1;
	int count;
	printf("请输入数字：");
	scanf("%d", &count);
	int num = 1;
	for (i = 1; i < count + 1; i++)
	{
		num = num * i;
	}
	printf("%d\n", num);
}

void test_2()
{
	//计算1！＋2！＋3！＋…＋10！
	int sum = 0;
	int num = 1;
	for (int i = 1; i < 11; i++)
	{
		num = 1;
		for (int j = 1; j < i + 1; j++)
		{
			num = num * j;
		}
		sum += num;
	}
	printf("%d\n", sum);

	//简便方法：
	sum = 0;
	num = 1;
	for (int i = 1; i < 11; i++)
	{
		num = num * i;
		sum += num;
	}
	printf("%d\n", sum);
}


